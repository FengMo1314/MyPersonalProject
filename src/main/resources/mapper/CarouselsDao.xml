<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace对应mapper接口所在的位置-->
<mapper namespace="com.example.springbootweb.dao.CarouselsDao">
    <sql id="select">
        SELECT *
        FROM lh_carousel
    </sql>
    <insert id="addCarousels">
        INSERT lh_carousel (id, url)
        VALUES (#{carousels.id}, #{carousels.url})
    </insert>
    <update id="updataCarouselsById">
        UPDATE lh_carousel
        SET url=#{carousels.url}
        WHERE id = #{carousels.id}
    </update>
    <delete id="deleteCarouselsById">
        DELETE
        FROM lh_carousel
        WHERE id = #{carousels.id}
        LIMIT 1
    </delete>
    <delete id="deleteCarouselsByIds">
        DELETE FROM lh_carousel WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="getAllCarousels" resultType="com.example.springbootweb.pojo.Carousels">
        <include refid="select"/>
    </select>
    <select id="getOneCarouselsByUrl" resultType="com.example.springbootweb.pojo.Carousels">
        <include refid="select"/>
        WHERE url=#{carousels.url}
    </select>
</mapper>
