<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace对应mapper接口所在的位置-->
<mapper namespace="com.example.springbootweb.dao.SYSDeptDao">
    <resultMap id="deptMap" type="com.example.springbootweb.pojo.SYSDept">
        <id column="dept_id" property="dept_id"/>
        <result column="is_valid" property="is_valid"/>
        <result column="create_staff_id" property="create_staff_id"/>
        <result column="create_date" property="create_date"/>
        <result column="remark" property="remark"/>
        <result column="father_dept_id" property="father_dept_id"/>
        <result column="dept_no" property="dept_no"/>
        <result column="dept_name" property="dept_name"/>
        <association property="fatherDept">
            <id column="f_id" property="dept_id"/>
            <result column="f_dept_name" property="dept_name"/>
            <result column="is_valid" property="is_valid"/>
            <result column="create_staff_id" property="create_staff_id"/>
            <result column="create_date" property="create_date"/>
            <result column="remark" property="remark"/>
            <result column="father_dept_id" property="father_dept_id"/>
            <result column="dept_no" property="dept_no"/>
        </association>
    </resultMap>
    <sql id="all">
        d1.dept_id,
        d1.dept_name,
        d1.dept_no,
        d1.father_dept_id,
        d1.remark,
        d1.create_date,
        d1.create_staff_id,
        d1.is_valid,
        d2.dept_id 'f_id',
        d2.dept_name 'f_dept_name'

    </sql>
    <sql id="selectAll">
        SELECT
        <include refid="all"/>
        FROM sys_dept d1
        LEFT JOIN sys_dept d2
        ON d1.father_dept_id=d2.dept_id
    </sql>
    <sql id="allDeptChoose">
        <choose>
            <when test="dept.dept_name!=null">
                d1.dept_name = #{dept.dept_name}
            </when>
            <when test="dept.dept_id!=null">
                 d1.dept_id = #{dept.dept_id}
            </when>
            <when test="dept.father_dept_id!=null">
                 d1.father_dept_id=#{dept.father_dept_id}
            </when>
        </choose>
    </sql>
    <sql id="selectAllByOne">
        <include refid="selectAll"/>
         WHERE
         <include refid="allDeptChoose"/>
    </sql>
    <insert id="addDept">
        INSERT INTO sys_dept (dept_name, dept_no, father_dept_id, remark, create_date, create_staff_id,
                              is_valid)
        VALUES (#{dept.dept_name}, #{dept.dept_no}, #{dept.father_dept_id}, #{dept.remark},
                #{dept.create_date}, #{dept.create_staff_id},
                #{dept.is_valid})
    </insert>
    <update id="updateDeptByDeptId">
        UPDATE sys_dept
        <set>
            <trim suffixOverrides=",">
                <if test="dept.is_valid!=null">
                    is_valid=#{dept.is_valid},
                </if>
                <if test="dept.create_staff_id!=null">
                    create_staff_id=#{dept.create_staff_id},
                </if>
                <if test="dept.create_date!=null">
                    create_date=#{dept.create_date},
                </if>
                <if test="dept.remark!=null">
                    remark=#{dept.remark},
                </if>
                <if test="dept.father_dept_id!=null">
                    father_dept_id=#{dept.father_dept_id},
                </if>
                <if test="dept.dept_no!=null">
                    dept_no=#{dept.dept_no},
                </if>
                <if test="dept.dept_name!=null">
                    dept_name=#{dept.dept_name},
                </if>
            </trim>
        </set>
        <choose>
            <when test="dept.dept_id!=null">
                WHERE dept_id=#{dept.dept_id}
            </when>
        </choose>

    </update>
    <select id="getAllDept" resultMap="deptMap">
        <include refid="selectAll"/>
    </select>
    <select id="getDeptByName" resultMap="deptMap">
        <include refid="selectAllByOne"/>
    </select>
    <select id="getAllByFatherDeptId" resultMap="deptMap">
        <include refid="selectAllByOne"/>
    </select>
    <select id="getDeptByDeptId" resultMap="deptMap">
        <include refid="selectAllByOne"/>
    </select>
</mapper>
    